{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "esm",
    "node_modules",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES6",
    "module": "commonjs",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "esm",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  }
}